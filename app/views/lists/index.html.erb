<%= render  "layouts/background-img" %>
<br/>
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>My Lists</h1>
        <%= link_to  "Add new List", new_list_path, class:"btn btn-success", style:"border-radius:10px" %>
    </div>
    <br/>
    <br/>
    <div class="row">
        <% @lists.each do |list|%>
                <div class="col-4">
                    <div class="card" style="width: 20rem;heigth:20rem">
                        <%= image_tag 'movie-theater', alttext: "text", class:"card-img-top" %>
                        <div class="card-body">
                            <h5 class="card-title"><%= list.name %></h5>
                            <p class="text-muted">Created <%= time_ago_in_words(list.created_at)%></p>
                            <div class="d-flex justify-content-between">
                            <button class="btn btn-danger sweet-alert-demo">Delete</button>
                            <%= link_to "" , list_path(list), method: :delete, class: "hidden delete-list"%>
                            <%= link_to "More" , list_path(list), class:"btn btn-info"%>
                            </div>
                        </div>
                    </div>
                </div>
        <%end%>
    </div>
</div>