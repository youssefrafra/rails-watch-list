<%= render  "layouts/background-img", image_url: "https://harborhonolulu.org/wp-content/uploads/2019/05/movie-theater-background.jpg" %>
<div class="container">
<h1><%= @list.name%></h1>
<%= link_to  "Add Movie", new_list_bookmark_path(@list), class:"btn btn-success" %>
<br/>
<br/>
<div class="row">
    <% @list.movies.each do |movie|%>
        <div class="col-lg-5" style="margin-top:20px;">
            <div class="card h-100" style="width: 25rem;">
                <% bookmark = Bookmark.find_by(list: @list,movie: movie) %>
                <img src=<%=movie.poster_url%>  class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                    <h5 class="card-title">
                    <%= movie.title%> &bull; <i class="fas fa-star" style="color:gold"></i>
                    <%= movie.rating %>
                    </h5>
                    <small class="text-muted"><%= movie.overview%></small>
                    </div>
                    <div>
                    <div class="d-flex align-items-center justify-content-between pt-3">
                        <div>
                            <i class="fas fa-quote-left mr-2"></i><small><%= bookmark.comment %></small>
                        </div>
                        <div>
                        <button class="btn btn-danger m-0">Delete</button>
                        <%= link_to "", bookmark_path(bookmark), method: :delete, class:"hidden" %>
                        </div>
                    </div>
                     <small class="text-muted">Created <%= time_ago_in_words(bookmark.created_at)%> ago</small>
                     </div>
                </div>
            </div>
        </div>
        <br/>
    <%end%>
</div>
